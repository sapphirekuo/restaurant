<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h2> Edit Profile </h2>

      <%= form_for @user do |f| %>

        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :intro, "自我介紹" %>
          <%= f.text_area :intro, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :avatar, "大頭照上傳      " %>
          <% if @user.avatar? %>
            <%= image_tag @user.avatar, width: '100px' %>
          <% else %>
            <%= image_tag "https://visualhunt.com/photos/l/7/chair-pet-cat.jpg", width: '100px' %>
          <% end %>
          <p> </p>
          <%= f.file_field :avatar %>
        </div>

        <div class="form-group">
          <%= f.submit "Update", class: "btn btn-primary"  %>
          <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
        </div>

      <% end %>
    </div>

  </div>
</div>